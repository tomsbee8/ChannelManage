<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/topic_category_root_view"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">



        <TextView
            android:id="@+id/topic_category_item_category_name"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_stoke_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="理财"
            android:textColor="@color/mostBlack"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/topic_category_item_category_editable"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignRight="@+id/topic_category_item_category_name"
            android:layout_alignTop="@+id/topic_category_item_category_name"
            android:background="@drawable/badgeview_background"
            android:text="X"
            android:textColor="@color/colorWhite"
            android:textSize="8dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center"
            />
</RelativeLayout>